.table-responsive
  %table.table.table-hover
    %tr
      %th Title
      %th Text
      %th{:colspan => "3"}
    - @articles.each do |article|
      %tr
        %td
          = article.title
        %td
          = article.text
        %td
          = render article.tags
        %td
          = article.created_at
        %td
          = link_to 'Show', article_path(article)
        %td
          = link_to 'Edit', edit_article_path(article)

      
        %td= link_to 'Destroy', article_path(article), |
            method: :delete,                          |
            data: { confirm: 'Are you sure?' }        |

